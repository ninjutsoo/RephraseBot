TELEGRAM_BOT_TOKEN=123456:ABCDEF_your_token_here
GEMINI_API_KEY=your_gemini_api_key_here
WEBHOOK_SECRET=choose_a_random_long_string_here

# Optional hardening: setWebhook supports secret_token; Telegram will send it as a header:
# X-Telegram-Bot-Api-Secret-Token: <your value>
TELEGRAM_WEBHOOK_SECRET_TOKEN=choose_another_random_string_here

# Optional: Only rephrase messages forwarded from a specific channel
# Use channel username (without @) or channel ID
# Examples: "mychannel" or "-1001234567890"
# Leave empty or unset to allow messages from any channel
ALLOWED_FORWARD_CHANNEL=

# Behavior tuning
SYSTEM_INSTRUCTION=Rephrase the forwarded message while preserving any @mentions, #hashtags, URLs, and numbers exactly. Do not change names. Keep the meaning.
GEMINI_MODEL=gemini-2.0-flash

